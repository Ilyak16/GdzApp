<Page x:Class="GdzApp.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register">
	<Grid Margin="20">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="2*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Border Grid.Column="1" Padding="20" Background="White" CornerRadius="6" BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="2">
			<StackPanel>
				<TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,10"/>
				<TextBlock Text="Логин"/>
				<TextBox x:Name="UsernameBox"/>
				<TextBlock Text="Пароль" Margin="0,8,0,0"/>
				<PasswordBox x:Name="PasswordBox"/>
				<TextBlock Text="Email" Margin="0,8,0,0"/>
				<TextBox x:Name="EmailBox"/>
				<StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
					<CheckBox x:Name="NotifyCheck" IsChecked="True" Content="Отправлять уведомления на почту" />
				</StackPanel>
				<TextBlock Text="Класс (числом)" Margin="0,8,0,0"/>
				<TextBox x:Name="ClassBox" />
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
					<Button Content="Зарегистрироваться" Click="Register_Click"/>
					<Button Content="Отмена" Click="Cancel_Click"/>
				</StackPanel>
				<TextBlock x:Name="Msg" Foreground="Red" Margin="0,8,0,0"/>
			</StackPanel>
		</Border>
	</Grid>
</Page>