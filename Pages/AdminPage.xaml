<Page x:Class="GdzApp.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Admin">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- left: textbooks list and controls -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Учебники" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" />
            <DataGrid x:Name="TextbooksGrid" AutoGenerateColumns="False" SelectionMode="Single" Height="400" Margin="0,8,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="40"/>
                    <DataGridTextColumn Header="Предмет" Binding="{Binding Subject}" Width="*"/>
                    <DataGridTextColumn Header="Авторы" Binding="{Binding Authors}" Width="120"/>
                    <DataGridTextColumn Header="Класс" Binding="{Binding Class}" Width="60"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Добавить" Click="AddTextbook_Click"/>
                <Button Content="Редактировать" Click="EditTextbook_Click"/>
                <Button Content="Удалить" Click="DeleteTextbook_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- right: tasks for selected textbook -->
        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Text="Задания (для выбранного учебника)" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" />
            <DataGrid x:Name="TasksGrid" AutoGenerateColumns="False" SelectionMode="Single" Height="360" Margin="0,8,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="40"/>
                    <DataGridTextColumn Header="Заголовок" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="ImageUrl" Binding="{Binding SolutionImageUrl}" Width="160"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Добавить" Click="AddTask_Click"/>
                <Button Content="Редактировать" Click="EditTask_Click"/>
                <Button Content="Удалить" Click="DeleteTask_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>