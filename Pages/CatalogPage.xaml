<Page x:Class="GdzApp.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:conv="clr-namespace:GdzApp.Converters"
      Title="Catalog">
    <Page.Resources>
        <conv:ImageUrlConverter x:Key="ImageUrlConverter"/>
    </Page.Resources>
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBox x:Name="SearchBox" Width="300" Margin="0,0,10,0"/>
            <TextBox x:Name="ClassFilterBox" Width="80" Margin="0,0,10,0"/>
            <Button Content="Поиск" Click="Search_Click"/>
            <Button Content="Сброс" Click="Reset_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="BooksPanel">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="#DDD" Padding="8" Margin="6" CornerRadius="6" Background="White">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Width="140" Height="180" Source="{Binding ImageUrl, Converter={StaticResource ImageUrlConverter}}" Grid.Column="0"/>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="{Binding Subject}" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Authors}" FontStyle="Italic" Margin="0,4,0,0"/>
                                    <TextBlock Margin="0,6,0,0">
                                        <Run Text="Класс: "/>
                                        <Run Text="{Binding Class}"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Manufacturer}"/>
                                    <TextBlock Text="{Binding Country}"/>
                                    <TextBlock Text="{Binding Year}"/>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,6,0,0" MaxHeight="80"/>
                                    <Button Content="Просмотреть задания" Click="ViewTasks_Click" Tag="{Binding}" Margin ="0, 15, 0, 0" Padding="8, 2" Background="{StaticResource PrimaryBrush}" Foreground="White"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Page>