<Window x:Class="GdzApp.Windows.AddEditTextbookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учебник" Width="500" Height="600" WindowStartupLocation="CenterOwner">
	<ScrollViewer>
		<StackPanel Margin="10">
			<TextBlock Text="Предмет" />
			<TextBox x:Name="SubjectBox"/>
			<TextBlock Text="Авторы" Margin="0,8,0,0"/>
			<TextBox x:Name="AuthorsBox"/>
			<TextBlock Text="Описание" Margin="0,8,0,0"/>
			<TextBox x:Name="DescriptionBox" AcceptsReturn="True" Height="100"/>
			<TextBlock Text="Изготовитель" Margin="0,8,0,0"/>
			<TextBox x:Name="ManufacturerBox"/>
			<TextBlock Text="Страна" Margin="0,8,0,0"/>
			<TextBox x:Name="CountryBox"/>
			<TextBlock Text="Год" Margin="0,8,0,0"/>
			<TextBox x:Name="YearBox"/>
			<TextBlock Text="Класс" Margin="0,8,0,0"/>
			<TextBox x:Name="ClassBox"/>
			<TextBlock Text="Ссылка на картинку" Margin="0,8,0,0"/>
			<TextBox x:Name="ImageUrlBox"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
				<Button Content="Сохранить" Click="Save_Click"/>
				<Button Content="Отмена" Click="Cancel_Click"/>
			</StackPanel>
		</StackPanel>
	</ScrollViewer>
</Window>