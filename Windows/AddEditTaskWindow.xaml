<Window x:Class="GdzApp.Windows.AddEditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание" Width="450" Height="300" WindowStartupLocation="CenterOwner">
	<StackPanel Margin="10">
		<TextBlock Text="Заголовок" />
		<TextBox x:Name="TitleBox"/>
		<TextBlock Text="Ссылка на изображение решения" Margin="0,8,0,0"/>
		<TextBox x:Name="ImageBox"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
			<Button Content="Сохранить" Click="Save_Click"/>
			<Button Content="Отмена" Click="Cancel_Click"/>
		</StackPanel>
	</StackPanel>
</Window>